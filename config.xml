<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"

        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "mx.cenet.AppHotel"
        version     = "1.0.0"
        versionCode = "1" >

        <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="cli-6.5.0" />
        <preference name="permissions" value="none"/>
        <preference name="SplashScreenDelay" value="5000"/>
        
              
        <name>AppHotel</name>

        <description>
            Aplicaci√≥n de prueba para hoteles.
        </description>

        <author href="#" email="yazmin777@gmail.com">
            Yazmin Pelaez
        </author>

        <icon src="img/icono.png" />
        <splash src="img/splash.jpg" />

        <plugin name="cordova-plugin-whitelist" source="npm" spec="1.1.0"  />
        <plugin name="cordova-plugin-geolocation" source="npm" spec="1.0.0" />
        <plugin name="cordova-plugin-media-capture" source="npm" spec="1.4.3" /> 
        <plugin name="cordova-plugin-splashscreen" source="npm" spec="4.1.0" />
        <plugin name="cordova-plugin-network-information" source="npm" spec="1.3.4" /> 

        

        <access origin ="*"/>
        <allow-intent href="*" />
        <allow-navigation href="*" />

    </widget>
